<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.easytravel">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyTravel"
        tools:targetApi="31">

        <!-- MainActivity -->
        <activity
            android:name=".Actividades.Principal.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Actividades.Principal.ActivityInicioSesion" />

        <activity android:name=".Actividades.Usuario.ActivityLoginUsuario" />
        <activity android:name=".Actividades.Empresa.ActivityLoginEmpresa" />

        <activity android:name=".Actividades.Usuario.ActivityRegistroUsuario" />
        <activity android:name=".Actividades.Empresa.ActivityRegistroEmpresa" />

        <activity android:name=".Actividades.Usuario.ActivityHomeUsuario"
            tools:ignore="Instantiatable" />
        <activity android:name=".Actividades.Empresa.ActivityHomeEmpresa"
            tools:ignore="Instantiatable" />

        <activity android:name=".Actividades.Administrador.ActivityAdmin" />








    </application>

</manifest>
