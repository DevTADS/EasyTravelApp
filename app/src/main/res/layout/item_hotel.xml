<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageview_hotel"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <TextView
                android:id="@+id/textview_nombre_hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="170dp"
                android:text="Nombre del Hotel"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textview_direccion_hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_nombre_hotel"
                android:layout_marginStart="170dp"
                android:text="Dirección del Hotel"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textview_pais_hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_direccion_hotel"
                android:layout_marginStart="170dp"
                android:text="País del Hotel"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textview_ciudad_hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_pais_hotel"
                android:layout_marginStart="170dp"
                android:text="Ciudad del Hotel"
                android:textSize="16sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
